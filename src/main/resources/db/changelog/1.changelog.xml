<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="202103281914" author="marcos">
        <createTable tableName="autor">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="varchar(400)">
                <constraints nullable="false"/>
            </column>
            <column name="criado_em" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
    <changeSet id="202103282000" author="marcos">
        <renameColumn tableName="autor" oldColumnName="criado_em" newColumnName="registrado_em" />
    </changeSet>
    <changeSet id="202103282009" author="marcos">
        <createSequence sequenceName="hibernate_sequence" />
    </changeSet>
    <changeSet id="202103282012" author="marcos">
        <dropSequence sequenceName="hibernate_sequence" />
        <createSequence sequenceName="autor_sequence" />
    </changeSet>
</databaseChangeLog>
