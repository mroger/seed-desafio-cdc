<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="202103281914" author="marcos">
        <createTable tableName="autor">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="varchar(400)">
                <constraints nullable="false"/>
            </column>
            <column name="registrado_em" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="202103310018" author="marcos">
        <createSequence sequenceName="autor_sequence" minValue="1" startValue="1" incrementBy="1" />
    </changeSet>
    <changeSet id="202103310059" author="marcos">
        <createTable tableName="categoria">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="202103310100" author="marcos">
        <createSequence sequenceName="categoria_sequence" minValue="1" startValue="1" incrementBy="1" />
    </changeSet>
    <changeSet id="202104010024" author="marcos">
        <createIndex tableName="autor" indexName="autor_email_idx01">
            <column name="email"/>
        </createIndex>
        <createIndex tableName="categoria" indexName="categoria_nome_idx01">
            <column name="nome"/>
        </createIndex>
    </changeSet>
    <changeSet id="2021040021532" author="marcos">
        <createTable tableName="livro">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="titulo" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="resumo" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="sumario" type="varchar">
                <constraints nullable="true"/>
            </column>
            <column name="preco" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="numero_paginas" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="isbn" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="data_publicacao" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="id_categoria" type="bigint">
                <constraints foreignKeyName="fk_categoria_livro" references="categoria(id)" nullable="false"/>
            </column>
            <column name="id_autor" type="bigint">
                <constraints foreignKeyName="fk_autor_livro" references="autor(id)" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2021040021648" author="marcos">
        <createSequence sequenceName="livro_sequence" minValue="1" startValue="1" incrementBy="1" />
    </changeSet>
    <changeSet id="2021040030" author="marcos">
        <createTable tableName="pais">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createSequence sequenceName="pais_sequence" minValue="1" startValue="1" incrementBy="1" />
    </changeSet>
    <changeSet id="2021040055" author="marcos">
        <createTable tableName="estado">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="id_pais" type="bigint">
                <constraints foreignKeyName="fk_pais_estado" references="pais(id)" nullable="false"/>
            </column>
        </createTable>
        <createSequence sequenceName="estado_sequence" minValue="1" startValue="1" incrementBy="1" />
    </changeSet>
    <changeSet id="202104062346" author="marcos">
        <createTable tableName="pedido">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
        <createSequence sequenceName="pedido_sequence" minValue="1" startValue="1" incrementBy="1" />
        <createTable tableName="compra">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="nome" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="sobrenome" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="documento" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="endereco" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="complemento" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="cidade" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="telefone" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="cep" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="id_pais" type="bigint">
                <constraints foreignKeyName="fk_pais_compra" references="pais(id)" nullable="false"/>
            </column>
            <column name="id_estado" type="bigint">
                <constraints foreignKeyName="fk_estado_compra" references="estado(id)" nullable="true"/>
            </column>
            <column name="id_pedido" type="bigint">
                <constraints foreignKeyName="fk_pedido_compra" references="pedido(id)" nullable="false"/>
            </column>
        </createTable>
        <createSequence sequenceName="compra_sequence" minValue="1" startValue="1" incrementBy="1" />
        <createTable tableName="item_pedido">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_livro" type="bigint">
                <constraints foreignKeyName="fk_livro_item_pedido" references="livro(id)" nullable="false"/>
            </column>
            <column name="quantidade" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="id_pedido" type="bigint">
                <constraints foreignKeyName="fk_pedido_item_pedido" references="pedido(id)" nullable="false"/>
            </column>
        </createTable>
        <createSequence sequenceName="item_pedido_sequence" minValue="1" startValue="1" incrementBy="1" />
    </changeSet>
    <changeSet id="202104072312" author="marcos">
        <addColumn tableName="item_pedido">
            <column name="preco_na_compra" type="decimal">
                <constraints nullable="true" />
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="202104081832" author="marcos">
        <createTable tableName="cupom">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="codigo" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="desconto" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="validade" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="202104100012" author="marcos">
        <addColumn tableName="compra">
            <column name="id_cupom" type="bigint">
                <constraints foreignKeyName="fk_cupom_compra" references="cupom(id)" nullable="true"/>
            </column>
            <column name="desconto_aplicado" type="decimal">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
